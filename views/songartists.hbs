<h2>SongArtists Relationship</h2>
<table id="songartist-table">
    <thead>
        <th>Song</th>
        <th>Artist</th>
        <th>Delete</th>
    </thead>
    {{!-- Body section --}}
    <tbody>
        {{#each data}}
        <tr data-value={{this.songArtistsID}}>
            <td>{{this.songID}}</td>
            <td>{{this.artistID}}</td>
            <td><button onclick="deleteSongArtist({{this.songArtistsID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_songartist.js"></script>
<br>
<div class="form">
    <h3>Add Song-Artist Relationship</h3>
    <form id="add-songartist-form" method="POST" action="/add-songartist-form">
        <table class="form">
            <tr>
                <td>Song:</td>
                <td><select name="input-song" id="input-album-ajax">
                    <option value="">Select a Song</option>
                    {{#each songs}}
                    <option value="{{this.songID}}">{{this.name}}</option>
                    {{/each}}
                </select></td>
            </tr>
            <tr>
                <td>Artist(s):</td>
                <td><select name="input-artist" id="input-artist-ajax">
                    <option value="">Select an Artist</option>
                    {{#each artists}}
                    <option value="{{this.artistID}}">{{this.name}}</option>
                    {{/each}}
                </select></td>
            </tr>
        </table>
        <br>
        <input type="submit">
    </form>
</div>
